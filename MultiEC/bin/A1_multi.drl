declare MVI 
	@role(event) 
	@timestamp(init) 
	@duration(length) 
	fluent : Fluent 
	value : Object 
	init : long 
	length : long
end

query holdsAt( Fluent $f, Object $v, long $t ) 
	exists MVI( fluent == $f, value == $v, 
		$i: init <= $t, $t - $i < length ) 
end

query holdsFor( Fluent $f, Object $v, long $ti, long $tt )
	exists MVI( fluent == $f, value == $v, 
		$ti <= $tt, 
		$i: init <= $ti, $ti - $i < length,
			init <= $tt, $tt - $i < length )
end

