package rec.com;

rule "In time meaningful sample"
no-loop
when
	$s: Sample( $f: fluent, $v: value )
	$m: MVI( fluent == $f, this includes $s, value != $v ) 
then
	modify( $m ) {
		setLength($s.getTime() - $m.getInit());
	}
	insert( new MVI($f, $v, $s.getTime(), Long.MAX_VALUE) );
	retract( $s );
end
