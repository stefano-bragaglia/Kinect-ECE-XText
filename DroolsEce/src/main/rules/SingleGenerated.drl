package com.sample.onestep

rule "Fulfilment SiDistende 18113"
when
	$ev: Event(name=="SiDistende")
	Inginocchiato==true after 10
	age=="young"
then
	<code if fulfilled>
	System.out.println("FULFILLED :)");
end

rule "Violation SiDistende 20799"
when
	$ev: Event(name=="SiDistende")
	not Inginocchiato==true after 10
	age=="young"
then
	<code if violated>
	System.out.println("VIOLATED :(");
end


